<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.ui.RemarkFragment">

    <Button
        android:id="@+id/remarkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投稿"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投稿する"
        android:layout_alignBaseline="@id/remarkButton" />

    <LinearLayout
        android:id="@+id/thumbnailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newPhotoTextView"
            android:text="新しい写真を追加\n(準備中)"
            android:background="@drawable/thumbnail"
            android:gravity="center"
            style="@style/iped_thumbnail"/>

    </LinearLayout>

    <EditText
        android:id="@+id/remarkEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/remarkButton"
        android:layout_above="@id/thumbnailLayout"
        android:gravity="top"></EditText>
</RelativeLayout>
