<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.iped_system.iped.server.apps.api.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitializeServlet</servlet-name>
        <servlet-class>com.iped_system.iped.server.apps.api.InitializeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitializeServlet</servlet-name>
        <url-pattern>/api/initialize</url-pattern>
    </servlet-mapping>
</web-app>